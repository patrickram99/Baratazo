generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Boleta {
  id      Int      @id @default(autoincrement())
  ventaId Int      @unique
  numero  String
  fecha   DateTime @default(now())
  total   Float
  Venta   Venta    @relation(fields: [ventaId], references: [id])
}

model Producto {
  id              Int      @id @default(autoincrement())
  nombre          String
  descripcion     String
  stockDisponible Int
  precio          Float
  categoria       String
  createdAt       DateTime @default(now())
  Venta           Venta[]
}

model Promocion {
  id                  Int      @id @default(autoincrement())
  porcentajeDescuento Int
  fechaInicio         DateTime
  fechaFin            DateTime
  descripcion         String
  condiciones         Bytes
  createdAt           DateTime @default(now())
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  apellido  String
  email     String   @unique
  password  String
  direccion String?
  createdAt DateTime @default(now())
  Venta     Venta[]
}

model Venta {
  id         Int      @id @default(autoincrement())
  usuarioId  Int
  productoId Int
  cantidad   Int
  total      Float
  fecha      DateTime @default(now())
  Boleta     Boleta?
  Producto   Producto @relation(fields: [productoId], references: [id])
  Usuario    Usuario  @relation(fields: [usuarioId], references: [id])
}
